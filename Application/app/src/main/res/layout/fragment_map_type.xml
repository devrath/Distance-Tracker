<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context="com.istudio.distancetracker.features.map.presentation.view.MapTypeSelectionFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/selectionsId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.istudio.core_ui.customviews.text.TextViewRegular
            android:id="@+id/btnNormalId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/normal"
            android:textColor="@color/colorBottomSheetTextColor"
            android:padding="20dp"
            android:textSize="18sp"/>

        <com.istudio.core_ui.customviews.text.TextViewRegular
            android:id="@+id/btnHybridId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hybrid"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorBottomSheetTextColor"
            android:padding="20dp"
            android:textSize="18sp"/>

        <com.istudio.core_ui.customviews.text.TextViewRegular
            android:id="@+id/btnSatelliteId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/satellite"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorBottomSheetTextColor"
            android:padding="20dp"
            android:textSize="18sp"/>

        <com.istudio.core_ui.customviews.text.TextViewRegular
            android:id="@+id/btnTerrainId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terrain"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorBottomSheetTextColor"
            android:padding="20dp"
            android:textSize="18sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/mobileId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gpsErrorImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/map_navigation_lotte"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>